</div>

<div class="best-locations">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading text-center">
                    <h2>Best Locations In Caribbeans</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.</p>
                </div>
            </div>
            <div class="col-lg-8 offset-lg-2">
                <div class="options">
                    @foreach (Best best in Model.Best)
                    {
                        <div class="option active" style="--optionBackground:url(@best.Pitcure);">
                            @*style="--optionBackground:url(~/assets/images/best-01.jpg);*@
                            <div class="shadow"></div>
                            <div class="label">
                                <div class="icon">
                                    <i class="fas fa-expand"></i>
                                </div>
                                <div class="info">
                                    <div class="main">@best.Name</div>
                                    <div class="sub">Nüfus: @best.Population M</div>
                                </div>
                            </div>
                        </div>
                    }
                     </div>
            </div>
            <div class="col-lg-12">
                <div class="main-button text-center">
                    <a asp-controller="home" asp-action="Deals">Tüm Şehirleri Keşfet</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2>Bir tatil mi Planlıyorsun?</h2>
