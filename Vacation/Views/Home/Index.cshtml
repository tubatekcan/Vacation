@model List<Slide>

<!-- ***** Main Banner Area Start ***** -->
<section id="section-1">
    <div class="content-slider">
        
       
           @for (int i = 0; i < Model.Count(); i++)
            {
                string isim = "banner" + (i + 1).ToString();
                <input type = "radio" id="@isim" class="sec-1-input" name="banner" @(i==0 ? "checked" : "")/>
            }>
        <div class="slider">

            @for (int i = 0; i < Model.Count; i++)
            {
                string isim = "top-banner-" + (i + 1).ToString();
                <div id="@isim" class="banner" style="background-image:url
(@Model[i].Pitcure)">
                <div class="banner-inner-wrapper header-text">
                    <div class="main-caption">
                        <h2>@Model[i].Description:</h2>
                        <h1>@Model[i].Name</h1>
                        <div class="border-button"><a href="@Model[i].Link">Detaylı Bilgi</a></div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="more-info">
                                    <div class="row">
                                        <div class="col-lg-3 col-sm-6 col-6">
                                            <i class="fa fa-user"></i>
                                            <h4>Nüfusu:<span>@Model[i].Population:</span><br> M</h4>
                                        </div>
                                        <div class="col-lg-3 col-sm-6 col-6">
                                            <i class="fa fa-globe"></i>
                                                <h4><span>Yüzölçümü:</span><br> @Model[i].Territory KM<em>2</em></h4>
                                        </div>
                                        <div class="col-lg-3 col-sm-6 col-6">
                                            <i class="fa fa-home"></i>
                                            <h4>Ortalama Fiyat:<span>@Model[i].AVGPrice:</span><br>₺</h4>
                                        </div>
                                        <div class="col-lg-3 col-sm-6 col-6">
                                            <div class="main-button">
                                                <a href="@Model[i].Link">Keşfet</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
            
            
        </div>
        <nav>
            <div class="controls">

                @for (int i = 0; i < Model.Count(); i++)
                {
                    string isim = "banner" + (i + 1).ToString();
                    <label for="@isim"><span class="progressbar"><span class="progressbar-fill"></span></span><span class="text">@(i+1)</span></label>
                }
            </div>

        </nav>
    </div>
</section>
<!-- ***** Main Banner Area End ***** -->

<div class="visit-country">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="section-heading">
                    <h2>Şimdi merak ettiğin  yerleri görmenin tam zamanı!</h2>
                    <p>Tatil mi planlıyorsun? Çok mu sıkıldın hyatın monoton akışından? Bir nefes al o halde ve istediğin yerde hemen rezervasyon yap.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="items">
                    <div class="row">

                       @foreach(Slide slide in Model)
                        {
                             <div class="col-lg-12">
                            <div class="item">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-5">
                                        <div class="image">
                                            <img src="@slide.Pitcure" alt="@slide.Name">
                                        </div>
                                    </div>
                                    <div class="col-lg-8 col-sm-7">
                                        <div class="right-content">
                                            <h4>@slide.Name</h4>
                                            <span>@slide.Name</span>
                                            <div class="main-button">
                                                <a href="@slide.Link">Daha Fazla</a>
                                            </div>
                                            <p>@slide.Description.</p>
                                            <ul class="info">
                                                <li><i class="fa fa-user"></i> @slide.Population </li>
                                                <li><i class="fa fa-globe"></i> @slide.Territory km2</li>
                                                <li><i class="fa fa-home"></i> @slide.AVGPrice₺</li>
                                            </ul>
                                            <div class="text-button">
                                                <a href="@slide.Link">Daha fazla  <i class="fa fa-arrow-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                       
                       
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="side-bar-map">
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="map">

                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31129718.55599159!2d-90.62215702370463!3d17.743957254493427!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8eb9e309d5a038b7%3A0xc67ecf32cac5dbdc!2sKarayipler!5e0!3m2!1str!2str!4v1689670239564!5m2!1str!2str" width="650" height="750" style="border:0;border-radius:23px;" allowfullscreen="" frameborder="0" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2>Tatil mi planlıyorsun?</h2>
                <h4>Tıkla ve rezervasyonunu hemen yap</h4>
            </div>
            <div class="col-lg-4">
                <div class="border-button">
                    <a href="/home/reservation1">Rezervasyon</a>
                </div>
            </div>
        </div>
    </div>
</div>
